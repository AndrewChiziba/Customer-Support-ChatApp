@using HelloFuture.Helpers
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Hello Future</h1>
    @if (User.IsInRole(Roles.Admin))
    {
        <p><a class="btn btn-primary btn-sm" asp-controller="People" asp-action="Index">Access the dashboard</a></p>
    }

    else if (User.IsInRole(Roles.Agent))
    {
        <p><a class="btn btn-primary btn-sm" asp-controller="People" asp-action="AgentProfile">Access the dashboard</a></p>
    }


    else if (User.IsInRole(Roles.Customer))
    {
        <p> <a class="btn btn-primary btn-sm" asp-controller="People" asp-action="MyProfile">Access the dashboard</a> </p>
    }
    else
    {
        <p> <a class="btn btn-primary btn-sm" asp-area="Identity" asp-page="/Account/Login">Login to access the dashboard</a></p>
    }


    @if (User.IsInRole(Roles.Customer))
    {
        <div>
            <p> <a class="btn btn-primary btn-sm" asp-controller="Chat" asp-action="FindAgent">Talk to an Agent</a></p>
        </div>
    }
    @if (SignInManager.IsSignedIn(User))
    {
        <p> <a class="btn btn-primary btn-sm" asp-area="" asp-controller="Chat" asp-action="Index">Messages</a> </p>
        }
</div>

